
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px">
    <div class="row" style="margin-top:50px">
        @using (Html.BeginForm("Register", "Login", FormMethod.Post))
        {
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>İsim:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="name" placeholder="Adınızı Giriniz" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Soyisim:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="surname" placeholder="Soyadınızı Giriniz" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Username:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" required name="username" placeholder="Kullanıcı Adınızı Giriniz" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Şifre:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" required name="password" placeholder="Şifrenizi Giriniz" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Email:</label>
                    </div>
                    <div class="col-md-10"> 
                        <input type="text" required name="email" placeholder="Emailinizi Giriniz" class="form-control" />
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-md-10 col-md-offset-2">
                        <input type="submit" value="Giriş Yap" class="form-control btn btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>